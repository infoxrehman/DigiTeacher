<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/books_background"
    tools:context=".AddBooksFragment">

    <TextView
        android:id="@+id/welcomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="@dimen/_28ssp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_38sdp"
        android:text="Welcome!"/>

    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_below="@id/welcomeLabel"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="@dimen/_20ssp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Add new book"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addBooks"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_below="@id/fullName"
        android:layout_marginTop="@dimen/_42sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        app:boxBackgroundColor="@null"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_4sdp"
        android:hint="@string/bookCode"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addBooksEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addBooks"
        android:layout_marginStart="@dimen/_48sdp"
        android:layout_marginEnd="@dimen/_48sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:background="@drawable/explore_btn"
        app:icon="@drawable/nav_add_book"
        app:iconPadding="@dimen/_22sdp"
        app:iconGravity="textStart"
        app:iconSize="@dimen/_18sdp"
        app:iconTint="@color/explore"
        android:elevation="@dimen/_4sdp"
        android:fontFamily="@font/montserrat_bold"
        android:padding="@dimen/_8sdp"
        android:stateListAnimator="@null"
        android:text="@string/addBook"
        android:textAllCaps="false"
        android:textColor="@color/explore"
        android:textSize="@dimen/_14ssp"
        app:backgroundTint="@null" />

</RelativeLayout>